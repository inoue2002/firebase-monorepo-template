{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["@types/node"],
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src", "tests"],
  "exclude": ["tests", "coverage", "jest.config.js", "node_modules"]
}
