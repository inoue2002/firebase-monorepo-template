{
  "name": "@firebase-monorepo-template/functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulators:start": "firebase emulators:start -P dev --only firestore,auth,pubsub",
    "test": "UNIT_TEST=true jest --runInBand",
    "test:watch": "yarn build && jest --runInBand --watch",
    "test:emulator": "firebase -P dev --only firestore,auth,pubsub emulators:exec 'yarn test'"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sentry/serverless": "^7.14.0",
    "dotenv": "^16.0.3",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.24.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "firebase-functions-test": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "private": true
}
