{
  "name": "@firebase-monorepo-template/security-rule",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "test": "FIRESTORE_EMULATOR_HOST=0.0.0.0:8080 FIREBASE_DATABASE_EMULATOR_HOST=0.0.0.0:9000 UNIT_TEST=true jest --runInBand --silent",
    "watch": "npm test -- --watch",
    "emulator:start": "firebase emulators:start -P dev --only firestore,auth",
    "deploy:dev": "firebase deploy -P dev --only firestore:rules",
    "deploy:prod": "firebase deploy -P prod --only firestore:rules",
    "test-emulator": "yarn build && firebase -P dev --only firestore,auth emulators:exec 'yarn test'"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.7.0",
    "@firebase/rules-unit-testing": "^2.0.4",
    "@types/chai": "^4.3.3",
    "filesystem": "1.0.1",
    "mocha": "^10.0.0",
    "source-map-support": "0.5.21",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "firebase": "^9.10.0",
    "firebase-admin": "^11.0.1"
  },
  "private": true
}
